<%- include('../partials/header') %> 
<nav class="navbar justify-content-end">
    <a href="/portfolios/<%=portfolio._id%>">Dashboard</a>
    <!-- <a href="/portfolios/chart">Chart</a> -->
    <a href="/logout" id="logout-right">Logout</a>
</nav>
<div class="bg-image" 
     style="background-image: url('https://images.unsplash.com/photo-1521080755838-d2311117f767?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2162&q=80');
            height: 100vh">
<div class="container d-flex flex-column justify-content-center">
<div class="card mx-auto update-holding" style="width:40%">
    <h5 class="card-title text-center py-3">Update Holding</h5>
    <div class="vstack gap-2 col-md-8 mx-auto">
    <div class="mb-3 row">
        <label class="col-sm-6 col-form-label">Stock: </label>
        <div class="col-sm-6">
            <div class="form-control-plaintext"><%= holding.symbol %> - <%= holding.name %></div>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-6 col-form-label">Market Value: </label>
        <div class="col-sm-6">
            <div class="form-control-plaintext">$<%= holding.marketValue %></div>
        </div>
    </div>
    <form id="update-holding" action="/portfolios/<%=portfolio._id%>/holdings/<%= holding._id %>?_method=PUT" method="POST">
        <div class="mb-3 row">
            <label class="col-sm-6 col-form-label">Quantity:</label>
            <div class="col-sm-6">
                <input type="number" name="quantity" class="form-control" placeholder="<%=holding.quantity%>" required>
            </div>
        </div>
        <div class="mb-4 row ">
            <label class="col-sm-6 col-form-label">Average Cost:</label>
            <div class="col-sm-6">
                <input type="text" name="avgCost" class="form-control" placeholder="<%=holding.avgCost%>" required>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-sm-12">
                <button class="btn cyan btn-secondary">Update</button>
            </div>
        </div>
    </form>
    <div class="mb-3 row text-center">
        <div class="col-sm-12">
            <form id="delete-holding" action="/portfolios/<%=portfolio._id%>/holdings/<%=holding._id%>?_method=DELETE" method="POST">
            <button type="submit" class="btn cyan btn-outline-secondary">Delete</button>
        </form>  
        </div>
    </div>
    </div>
</div>
</div>
</div>

<%- include('../partials/footer') %> 
